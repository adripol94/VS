<Page
    x:Class="ExamenCartas.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ExamenCartas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:ExamenCartas.ViewModel"
    mc:Ignorable="d">
    <Page.DataContext>
        <vm:MainPageVM />
    </Page.DataContext>
    

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <RelativePanel x:ConnectionId='1' Name="Nav">
            <AppBarButton x:ConnectionId='3' Name="Reiniciar" 
                          Icon="Refresh"
                                                  
                          Command="{Binding Restart}"
                          RelativePanel.AlignLeftWithPanel="True"/>
            <Border BorderBrush="Aqua" 
                    BorderThickness="1"
                    RelativePanel.AlignRightWithPanel="True">
                <TextBlock x:ConnectionId='4' Name="Reloj"/>
            </Border>
        </RelativePanel>

        <GridView x:ConnectionId='2' x:Name="Tarjetas" ItemsSource="{Binding Lista,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                  SelectedItem="{Binding Seleccionada,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                  Margin="0, 40, 0, 0" IsItemClickEnabled="{Binding isClickOk}">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="2" Width="100" Height="100">
                        <Image Source="{Binding img}" 
                               Visibility="{Binding Visible,UpdateSourceTrigger=PropertyChanged}"/>
                    </Border>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

    </StackPanel>
</Page>

