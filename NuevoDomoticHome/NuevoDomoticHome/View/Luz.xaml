<Page
    x:Class="NuevoDomoticHome.View.Luz"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NuevoDomoticHome.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel Background="{ThemeResource AppBarBackgroundThemeBrush}" Padding="20">
        <Slider x:Name="slider"  ValueChanged="Slider_ValueChanged"
                RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignRightWithPanel="True"
                RelativePanel.AlignVerticalCenterWithPanel="True" RelativePanel.AlignLeftWithPanel="True"/>
        
        <Rectangle x:Name="rctLight" Fill="Yellow" RelativePanel.Above="slider" RelativePanel.AlignRightWithPanel="True" Height="20"
                   RelativePanel.AlignVerticalCenterWithPanel="True" Opacity="0.0"
                   RelativePanel.AlignLeftWithPanel="True"/>
    </RelativePanel>
</Page>
